datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  title       String
  body        String
  authorId    String?
  editorId    String?
  publisherId String?
  publishedAt DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String
  message   String
  userId    String?
}

model UserProfile {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now())
  uuid      String     @unique
  userRoles UserRole[]
}

model UserRole {
  id            Int          @id @default(autoincrement())
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @default(now())
  name          String
  userProfileId Int?
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])

  @@unique([name, userProfileId], name: "UserRole.name_userProfileId_unique")
}
